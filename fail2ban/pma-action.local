[Definition]

actionstart = echo "" > /opt/pma-fail2ban-ip.conf && /usr/sbin/nginx -s reload
actionstop = echo "" > /opt/pma-fail2ban-ip.conf && /usr/sbin/nginx -s reload
actioncheck =
actionflush = echo "" > /opt/pma-fail2ban-ip.conf && /usr/sbin/nginx -s reload
actionban = echo -n "deny <ip>;" >> /opt/pma-fail2ban-ip.conf && /usr/sbin/nginx -s reload
actionunban = sed -i "s/deny <ip>;//g" /opt/pma-fail2ban-ip.conf && /usr/sbin/nginx -s reload
